<launch>
    <!-- <arg name="bag_dir" default="$(env HOME)/rosbags" />
    <arg name="bag_name" default="session_$(arg bag_dir)/data_$(env ROS_TIME)" /> -->

    <node name="data_getter" pkg="dataglove" type="data_getter.py" output="screen" args="record"/>
    <!-- publisher: takes the data stream from the glove and publishes it as a ROS topic. -->
    <node name="data_printer" pkg="dataglove" type="data_printer.py" output="screen"  args="record"/> 
    <!-- subscriber: takes the data stream from the glove and sends it to the classifier -->
    
    <node pkg="rosbag" type="record" name="rosbag_record" respawn="true" output="screen" args="-O $(find dataglove)/bags/data_$(env ROS_TIME) /tf /odom /cmd_vel" />
    <!-- recording the data automatically in a .bag file -->
    
    <!-- <node name="sub_glove" pkg="dataglove" type="event_classifier" output="screen"/>  -->
    <!-- subscriber: takes as input the data stream (time series?) from the glove and classifies it into events (e.g., pinch, grasp, etc.). -->
</launch>